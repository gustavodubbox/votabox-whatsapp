APP_NAME="WhatsApp Business System"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://seu-dominio.com

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=whatsapp_business_system
DB_USERNAME=laravel
DB_PASSWORD=sua_senha_segura

BROADCAST_DRIVER=redis
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

REDIS_HOST=redis
REDIS_PASSWORD=sua_senha_redis
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=seu_smtp_host
MAIL_PORT=587
MAIL_USERNAME=seu_email
MAIL_PASSWORD=sua_senha_email
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@seu-dominio.com"
MAIL_FROM_NAME="${APP_NAME}"

# WhatsApp Business API Configuration
WHATSAPP_ACCESS_TOKEN=seu_access_token_permanente
WHATSAPP_PHONE_NUMBER_ID=seu_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=seu_business_account_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=seu_verify_token_personalizado
WHATSAPP_APP_SECRET=seu_app_secret
WHATSAPP_API_VERSION=v18.0

# Google Gemini AI Configuration
GEMINI_API_KEY=sua_chave_api_gemini

# JWT Configuration
JWT_SECRET=sua_chave_jwt_secreta
JWT_TTL=60
JWT_REFRESH_TTL=20160

# SMS Configuration (para 2FA)
SMS_PROVIDER=twilio
TWILIO_SID=seu_twilio_sid
TWILIO_TOKEN=seu_twilio_token
TWILIO_FROM=seu_numero_twilio

# AWS Configuration (para deploy)
AWS_ACCESS_KEY_ID=sua_access_key
AWS_SECRET_ACCESS_KEY=sua_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=seu_bucket_s3

# Octane Configuration
OCTANE_SERVER=swoole
OCTANE_HTTPS=true

# Security
SANCTUM_STATEFUL_DOMAINS=seu-dominio.com
SESSION_DOMAIN=.seu-dominio.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
WHATSAPP_RATE_LIMIT_PER_MINUTE=20

# Monitoring
SENTRY_LARAVEL_DSN=sua_dsn_sentry

